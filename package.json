{
  "name": "arcgis-maps-sdk-javascript-samples-beta",
  "description": "Code samples and templates for ArcGIS Maps SDK for JavaScript",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/**/*"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "postinstall": "husky install",
    "update:all": "yarn update:core && yarn update:map-components && yarn update:coding-components && yarn update:charts-components",
    "update:core": "yarn up @arcgis/core@next",
    "update:map-components": "yarn up @arcgis/map-components@next @arcgis/map-components-react@next @arcgis/map-components-angular@next",
    "update:coding-components": "yarn up @arcgis/coding-components@next @arcgis/coding-components-react@next @arcgis/coding-components-angular@next",
    "update:charts-components": "yarn up @arcgis/charts-components@next @arcgis/charts-components-react@next @arcgis/charts-components-angular@next"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.2",
    "@commitlint/config-conventional": "19.2.2",
    "husky": "9.0.11",
    "prettier": "^3.0.0",
    "syncpack": "^12.3.0"
  },
  "packageManager": "yarn@4.0.2"
}
